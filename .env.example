# Qdrant Configuration
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
COLLECTION_NAME=dev-collection

# Embedding Configuration
EMBEDDING_MODEL=nomic-ai/nomic-embed-text-v1.5-Q
EMBEDDING_PROVIDER=fastembed

# Chunking Configuration
ENABLE_CHUNKING=true
MAX_CHUNK_SIZE=512
CHUNK_OVERLAP=50
CHUNK_STRATEGY=semantic

# FastMCP Configuration
FASTMCP_HOST=0.0.0.0
FASTMCP_PORT=8000
FASTMCP_DEBUG=true
FASTMCP_LOG_LEVEL=INFO

# Tool Descriptions
#TOOL_STORE_DESCRIPTION=Store development documents and code snippets with semantic search capabilities
#TOOL_FIND_DESCRIPTION=Search for relevant documents and code snippets using natural language queries

# Development Options
QDRANT_SEARCH_LIMIT=20
QDRANT_READ_ONLY=false
QDRANT_ALLOW_ARBITRARY_FILTER=false
